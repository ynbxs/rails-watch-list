<div class="container my-4">
  <!-- Banner -->
  <div class="card text-white mb-4">
  <%= image_tag "movie_banner.jpg",
                class: "card-img",
                alt: "Movie banner",
                style: "height: 200px; object-fit: cover;" %>
  <div class="card-img-overlay d-flex justify-content-between align-items-center">
    <h1 class="h3 m-0">Your Lists</h1>
    <%= link_to "New list", new_list_path, class: "btn btn-primary" %>
  </div>
</div>

<% if @lists.any? %>
  <div class="row g-3">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-lg-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <h2 class="h5 card-title mb-2"><%= list.name %></h2>
            <p class="text-muted mb-4"><%= pluralize(list.movies.count, "movie") %></p>
            <div class="mt-auto">
              <%= link_to "Open", list_path(list), class: "btn btn-outline-secondary btn-sm" %>

            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No lists yet. Create one!</p>
<% end %>
</div>
